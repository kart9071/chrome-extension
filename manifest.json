{
  "manifest_version": 3,
  "name": "CareTracker Button Listener",
  "version": "1.0",
  "description": "Shows a button when CareTracker patient table appears.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://rapidrelease.caretracker.com/*"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://rapidrelease.caretracker.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
