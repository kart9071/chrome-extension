{
  "manifest_version": 3,
  "name": "CareTracker Chart Details",
  "version": "1.0.0",
  "description": "Injects a chart details button into CareTracker pages and fetches chart info securely.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*.caretracker.com/*",
    "https://h4xqr89uik.execute-api.us-east-1.amazonaws.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.caretracker.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_title": "CareTracker Chart Viewer"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://*.caretracker.com/*"]
    }
  ]
}
