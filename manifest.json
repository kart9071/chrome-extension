{
  "manifest_version": 3,
  "name": "CareTracker Chart Details",
  "version": "1.0",
  "description": "Injects a button in CareTracker to open patient chart details in a new tab.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.caretracker.com/*",
    "https://h4xqr89uik.execute-api.us-east-1.amazonaws.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.caretracker.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "chart-details.html",
        "chart-details.js",
        "chart-details.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "CareTracker Chart Viewer"
  }
}
