{
  "manifest_version": 3,
  "name": "CareTracker Button Listener",
  "version": "1.0",
  "description": "Shows a button when CareTracker patient table appears.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://*.caretracker.com/*",
    "https://h4xqr89uik.execute-api.us-east-1.amazonaws.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.caretracker.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
